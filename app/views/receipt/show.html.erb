<h2>Receipt</h2>
<%= link_to 'View' , receipt_view_path(@receipt.ref_id), :class => "btn btn-primary" %>
<%= link_to 'Delete' , @receipt , method: :delete, data: {confirm: "Are you sure?"} , :class => "btn btn-danger" %>

        <% if  @receipt.status == "Buyer Paid" %>
            <%= form_for @receipt, url: shipment_update_path(@receipt) do |f|  %>
                    <h5><b>Update Shipment</b></h5>
                    <hr style="margin-top:0px; margin-bottom:0px;">
                    <div class = "col-xs-12 col-md-12">
                    <div class="col-xs-12 col-md-4" style="padding-left:0px;">
                        <div class="form-group">
                            <%= f.label "Tracking Number" %>
                            <%= f.text_field :shipping_number, :class => "form-control" %>
                            <%= f.submit "Update" , :class => "btn btn-success", :style => "margin-top:10px;" %>
                        </div>
                    </div>
                    </div>
            <% end %>
        <% end %>

                        <h3>Name:
                            <%= @receipt.customer_name %>
                        </h3>
                        <h3>Shipping Address:
                            <%= @receipt.shipping_address %>
                        </h3>
                        <h3>Poskod:
                            <%= @receipt.shipping_poskod %>
                        </h3>
                        <h3>Country:
                            <%= @receipt.shipping_country %>
                        </h3>
                        <h3>State:
                            <%= @receipt.shipping_state %>
                        </h3>
                        <h3>Phone:
                            <%= @receipt.customer_phone %>
                        </h3>
                        <h3>Status:
                            <%= @receipt.status %>
                        </h3>
                        <% if @receipt.status == "Shipped" %>
                        <h3>
                            Tracking Number :
                            <%= @receipt.shipping_number %>
                        </h3>
                        <% end %>
                        <h3>Shipping Price:
                            <%= @receipt.shipping_price %>
                        </h3>
                        <h3>Total Price:
                            <%= @receipt.total %>
                        </h3>
                        <h3>
                            <%= image_tag @receipt.pay_img if @receipt.pay_img? %>
                        </h3>
                        <h3>Text Proof of payment:
                            <%= @receipt.pay_txt %>
                        </h3>


                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Desc</th>
                                    <th>Quantity</th>
                                    <th>Total Price</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% @receipt.productreceipt.each do |product| %>
                                    <tr>
                                        <td>
                                            <%= product.name %>
                                        </td>
                                        <td>
                                            <%= product.desc %>
                                        </td>
                                        <td>
                                            <%= product.qty %>
                                        </td>
                                        <td>
                                            <%= product.subtotal %>
                                        </td>
                                    </tr>
                                    <% end %>


                            </tbody>
                        </table>