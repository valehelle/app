<h2>PRODUCT</h2>
<div class = "col-xs-12 shadow" style = " background-color: white; padding:5px; margin-bottom:15px; border-top :3px solid #3c8dbc; border-radius: 3px;">
<table class="table">
    <thead>
        <tr>
            <th class="col-xs-2 col-md-3">Name</th>
            <th class="col-xs-8 col-md-3">Desc</th>
            <th class="col-xs-2 col-md-2">Quantity</th>
            <th class="col-xs-2 col-md-2">Total Price</th>
            <th class="hidden-xs hidden-sm col-md-2">Action</th>
        </tr>
    </thead>
    <tbody>

        <% @products.each do |product| %>
            <tr>
                <td>
                    <%= link_to product.name , product %>
                </td>
                <td>
                    <%= product.desc %>
                </td>
                <td>
                    <%= product.stock %>
                </td>
                <td>
                    <%= product.price %>
                </td>
                <td class="hidden-xs hidden-sm col-md-2">
                    <%= link_to 'Edit' , edit_product_path(product), :class => "btn btn-success" %> 
                </td>
                
            </tr>
            <% end %>


    </tbody>
</table>
<%= will_paginate @products, renderer: BootstrapPagination::Rails  %>
</div>
