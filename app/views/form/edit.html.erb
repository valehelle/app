<%= form_for @form do |f| %>
    <div class = "field">
        <%= f.label :name%><br>
        <%= f.text_field :name%>
    </div>
    <%= f.fields_for :product do |builder| %>
        <%= render 'product_fields', f: builder %>
    <% end %>
    <%= link_to_add_fields "Add Product", f, :product %>
    <div class = "action">
        <%= f.submit %>
    </div>
<% end %>