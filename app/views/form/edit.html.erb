<div class = "col-xs-12 col-md-4">
    <h2>Edit Form</h2>
    <% if @form.errors.any? %>
        <div class = "col-xs-12 col-md-12" id="error_explanation">
            <ul>
            <% @form.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>
    <%= form_for @form do |f| %>
        <div class = "form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name, :class => "form-control"%>
        </div>
        
        <%= f.fields_for :product do |builder| %>
            <%= render 'product_fields', f: builder %>
        <% end %>

        <%= link_to_add_fields "Add Product", f, :product %>
        <%= f.submit "Update", :class => "btn btn-success"%>
    <% end %>
</div>